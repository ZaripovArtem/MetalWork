@{
}

@{
    ViewBag.Title = "Клиенты";
}

@Html.ActionLink("Добавить", "Create")

<table>
    <tr>
        <th>Фамилия</th>
        <th>Имя</th>
        <th>Отчество</th>
        <th>Адрес</th>
        <th>Email</th>
    </tr>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.Surname</td>
            <td>@p.Name</td>
            <td>@p.Patronomic</td>
            <td>@p.Address</td>
            <td>@p.Email</td>
            <td>@Html.ActionLink("Редактировать", "Edit", new { id = p.Id })</td>
            <td>@Html.ActionLink("Удалить", "Delete", new { id = p.Id })</td>
        </tr>
    }
</table>