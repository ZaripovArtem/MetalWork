@model MetalWork.Models.LoginViewModel

<div class="panel">
    <div class="panel-heading">
        <h3>Вход в систему</h3>

    </div>
    @Html.ValidationSummary()
    <div class="panel-body">

        @using (Html.BeginForm())
        {
            <div class="form-group">
                @Html.TextBoxFor(m => m.Login, new { @class = "form-control", @placeholder = "Логин" })
            </div>
            <div class="form-group">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Пароль" })
            </div>

            <input type="submit" value="Войти" class="button-in" />
        }
    </div>
</div>

<style>
    .form-control {
        width: 400px;
        padding: 10px;
        margin-left: 10px;
        margin-top: 5px;
    }

    .button-in {
        color: white;
        width: 70px;
        background-color: black;
        border-radius: 3px;
        margin-left: 340px;
        margin-top: 5px;
    }

        .button-in:hover {
            background-color: white;
            color: black;
            transition: 0.8s;
        }

        .button-in:not(:hover) {
            transition: 0.8s;
        }

    .attention {
        height: 70px;
        width: 400px;
        background-color: #dbe1e2;
        border: 1px black solid;
        margin-left: 10px;
        padding-left: 3px;
        border-radius: 5px;
        opacity: 0.7;
    }

    .panel-heading {
        margin-left: 110px;
    }
</style>