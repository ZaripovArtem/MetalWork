@{
}
@{
    ViewBag.Title = "Состав изделия";
}

@Html.ActionLink("Добавить", "Create")

<table>
    <tr>
        <th>Название продукта</th>
        <th>Название материала</th>
        <th>Количество материала</th>
    </tr>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.Product.Name</td>
            <td>@p.Material.Name</td>
            <td>@p.Count</td>
            <td>@Html.ActionLink("Редактировать", "Edit", new { id = p.Id })</td>
            <td>@Html.ActionLink("Удалить", "Delete", new { id = p.Id })</td>
        </tr>
    }
</table>