@model MetalWork.Models.Product

<h2>Изменение информации о клиенте</h2>

@using (Html.BeginForm())
{
    @Html.TextBoxFor(m => m.Name, new { @class = "form-main", @placeholder = "Название" })
    <br />
    @Html.TextBoxFor(m => m.Price, new { @class = "form-main", @placeholder = "Цена" })
    <br />
    <div class="main-footer">
        <input type="submit" class="submit-buttom" value="Изменить" />
        @Html.ActionLink("Отменить", "Index")
    </div>
}

<style>
      .submit-buttom
    {

        width:100px;
        height:40px;
        background-color: black;
        padding:4px;
      
    
 
        color:white;
        text-decoration:none;
        border-radius:4px;

   
    }
    .submit-buttom:hover{
          text-decoration:none;
          background-color:white;
          color:black;
          transition:1s;
          border:1px solid black;
    }
    .form-main {
        margin-top: 10px;
        width: 300px;
        height: 40px;
    }

    .main-footer {
        margin-top: 10px;
    }

    .submit-buttom {
        margin-right: 135px;
    }
</style>