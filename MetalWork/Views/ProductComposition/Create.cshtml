@model MetalWork.Models.ProductComposition

<h2>Добавить состав изделия</h2>

@using (Html.BeginForm())
{
    @Html.DropDownListFor(model => model.MaterialId, ViewBag.Material as SelectList)
    <br />
    @Html.DropDownListFor(model => model.ProductId, ViewBag.Product as SelectList)
    <br />
    @Html.TextBoxFor(m => m.Count, new { @class = "form-main", @placeholder = "Количество" })
    <br />
    <div class="main-footer">
        <input type="submit" class="submit-buttom" value="Добавить" />
        @Html.ActionLink("Отменить", "Index")
    </div>
}
<style>

  .submit-buttom
    {

        width:100px;
        height:40px;
        background-color: black;
        padding:4px;
      
    
 
        color:white;
        text-decoration:none;
        border-radius:4px;

   
    }
    .submit-buttom:hover{
          text-decoration:none;
          background-color:white;
          color:black;
          transition:1s;
          border:1px solid black;
    }</style>